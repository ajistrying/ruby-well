<div class="min-h-screen">
  <div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-2">Trending Ruby Projects</h1>
      <p class="text-lg text-gray-600">
        Discover what's popular in the Ruby community today
      </p>
      <p class="text-sm text-gray-500">
       Latest trending Github repo data as of <%= @date.strftime("%B %d, %Y") %>
      </p>
    </div>

    <!-- Trending Repos List -->
    <% if @trending_repos.any? %>
      <div class="grid gap-6 max-w-5xl mx-auto">
        <% @trending_repos.each do |repo| %>
          <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
            <div class="card-body">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-start gap-4">
                    <div class="flex flex-col items-center">
                      <span class="text-2xl font-bold text-primary"><%= repo.trending_position %></span>
                    </div>
                    <div class="flex-1">
                      <h2 class="card-title text-xl mb-2">
                        <%= link_to repo.github_url, 
                            target: "_blank",
                            rel: "noopener",
                            class: "link link-hover flex items-center gap-2" do %>
                          <span class="text-gray-600"><%= repo.owner %></span>
                          <span>/</span>
                          <span class="font-bold"><%= repo.name %></span>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                          </svg>
                        <% end %>
                      </h2>
                      
                      <% if repo.description.present? %>
                        <p class="text-gray-600 mb-4">
                          <%= repo.description %>
                        </p>
                      <% end %>
                      
                      <div class="flex flex-wrap items-center gap-4 text-sm">
                        <div class="badge badge-lg badge-outline">
                          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                          <%= number_with_delimiter(repo.total_stars) %>
                          <% if repo.stars_today > 0 %>
                            (+<%= repo.stars_today %> today)
                          <% end %>
                        </div>
                        
                        
                        
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m9.032 4.024a9.663 9.663 0 01-2.38.313c-.51 0-1.008-.033-1.496-.093m3.876-.406a9.04 9.04 0 01-3.876.406m3.876-.406c.893-.448 1.685-1.058 2.334-1.795M15.716 13.342a3 3 0 00-5.432 0"/>
                          </svg>
                          <%= number_with_delimiter(repo.forks) %>
                        </div>
                      
                      </div>
                      
                      <% if repo.contributors.any? %>
                        <div class="mt-4">
                          <span class="text-xs text-gray-500 mr-2">Built by:</span>
                          <div class="avatar-group -space-x-6 inline-flex">
                            <% repo.contributors.first(5).each do |contributor| %>
                              <div class="avatar">
                                <div class="w-8">
                                  <img src="<%= contributor['avatar_url'] %>" 
                                       alt="<%= contributor['username'] %>"
                                       title="<%= contributor['username'] %>" />
                                </div>
                              </div>
                            <% end %>
                            <% if repo.contributors.size > 5 %>
                              <div class="avatar placeholder">
                                <div class="w-8 bg-neutral-focus text-neutral-content">
                                  <span class="text-xs">+<%= repo.contributors.size - 5 %></span>
                                </div>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <svg class="w-24 h-24 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <h3 class="text-xl font-semibold mb-2">No Trending Repos Found</h3>
        <p class="text-gray-500 mb-6">
          There are no trending Ruby repositories for <%= @date.strftime("%B %d, %Y") %>.
        </p>
        <%= form_with url: refresh_trending_repos_path, method: :post, local: true do |f| %>
          <%= f.submit "Fetch Latest Trending Repos", class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>