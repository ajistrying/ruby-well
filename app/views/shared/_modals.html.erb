<!-- Feedback Modal -->
<dialog id="modal_feedback" class="modal">
  <div class="modal-box max-w-2xl" onclick="event.stopPropagation()">
    <h3 class="font-bold text-lg mb-4">Share Your Feedback</h3>
    
    <% if defined?(Feedback) %>
      <%= render "feedbacks/form", feedback: Feedback.new %>
    <% else %>
      <div class="alert alert-info">
        <span>Feedback system is being set up. Please check back later.</span>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

