<header class="navbar bg-base-100">
  <div class="container mx-auto px-4 justify-between flex w-full items-center">
    <div class="flex-1">
      <%= link_to root_path, class: "btn btn-ghost text-xl" do %>
        <%= image_tag "/rubywell.svg", alt: "RubyWell", class: "w-8 h-8" %>
          <span class="text-2xl font-bold -ml-1">RubyWell</span>
      <% end %>
    </div>
    
    <div class="flex-none">
      <ul class="menu menu-horizontal px-1 gap-2">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Browse", entries_path %></li>
        <li>
          <button class="btn btn-sm btn-primary btn-outline" 
                  data-controller="modal" 
                  data-action="click->modal#open">
            Request a Feature
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </button>
        </li>
        <li>
          <button class="btn btn-sm btn-secondary"
                  data-controller="modal"
                  data-action="click->modal#open">
            Support RubyWell
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
            </svg>
          </button>
        </li>
      </ul>
    </div>
  </div>
</header>