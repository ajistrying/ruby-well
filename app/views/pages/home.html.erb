<div class="min-h-screen">
  <!-- Hero Section -->
  <section class="hero min-h-[60vh]">
    <div class="hero-content text-center py-16">
      <div class="max-w-4xl">
        <h1 class="text-5xl font-bold flex items-center justify-center">
          <%= image_tag "/rubywell.svg", alt: "RubyWell", class: "w-16 h-16" %>
          RubyWell
        </h1>
        <p class="text-xl">A Ruby community resource aggregator</p>
        <p class="text-lg mt-8 max-w-2xl mx-auto">
          Search through hundreds of articles, podcasts, and videos from various Ruby community sources
        </p>
        
        <!-- Search Form -->
        <div class="card bg-base-100 max-w-3xl mx-auto">
          <div class="card-body">
            <%= form_with url: entries_path, method: :get, 
                          data: { 
                                  controller: "search",
                                  action: "submit->search#search" },
                          class: "space-y-4" do |f| %>
              
              <div class="form-control">
                <div class="flex gap-2 justify-center">
                  <%= f.text_field :query, 
                      placeholder: "Search for articles, tutorials, podcasts...",
                      class: "input input-bordered input-lg flex-1 text-lg",
                      data: { 
                        search_target: "input",
                        action: "input->search#handleInput"
                      },
                      autocomplete: "off",
                      autofocus: true %>
                  <%= f.submit "Search", class: "btn btn-primary btn-lg" %>
                </div>
              </div>
              
              <!-- Advanced Filters Section -->
              <div class="hidden" data-search-target="filters">
                <div class="divider"></div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text">Content Type</span>
                    </label>
                    <%= f.select :entry_type, 
                        options_for_select([
                          ["All Types", ""],
                          ["Articles", "article"],
                          ["Podcasts", "podcast"],
                          ["Videos", "video"]
                        ]),
                        {},
                        class: "select select-bordered" %>
                  </div>
                  
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text">Source Category</span>
                    </label>
                    <%= f.select :feed_category,
                        options_for_select([
                          ["All Categories", ""],
                          ["Personal Blogs", "personal"],
                          ["Company Blogs", "company"],
                          ["Community", "community"],
                          ["Newsletters", "newsletter"],
                          ["Podcasts", "podcast"]
                        ]),
                        {},
                        class: "select select-bordered" %>
                  </div>
                  
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text">Date Range</span>
                    </label>
                    <div class="flex gap-2">
                      <%= f.date_field :date_from, 
                          class: "input input-bordered input-sm flex-1",
                          placeholder: "From" %>
                      <%= f.date_field :date_to,
                          class: "input input-bordered input-sm flex-1",
                          placeholder: "To" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Trending Ruby Projects -->
  <section class="py-12 bg-base-200">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Trending Ruby Projects</h2>
      
      <% if @trending_repos.any? %>
        <div class="grid gap-4 max-w-4xl mx-auto">
          <% @trending_repos.each do |repo| %>
            <div class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow">
              <div class="card-body">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="badge badge-primary badge-sm"><%= repo.trending_position %></span>
                      <h3 class="card-title text-lg">
                        <%= link_to repo.full_name, repo.github_url, 
                            target: "_blank",
                            rel: "noopener",
                            class: "link link-hover" %>
                      </h3>
                    </div>
                    <% if repo.description.present? %>
                      <p class="text-sm text-gray-600 mt-2">
                        <%= truncate(repo.description, length: 150) %>
                      </p>
                    <% end %>
                    <div class="flex items-center gap-4 mt-3 text-sm">
                      <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        <%= repo.total_stars %>
                        <% if repo.stars_today > 0 %>
                          <span class="text-success">(+<%= repo.stars_today %> today)</span>
                        <% end %>
                      </span>
                      <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m9.032 4.024a9.663 9.663 0 01-2.38.313c-.51 0-1.008-.033-1.496-.093m3.876-.406a9.04 9.04 0 01-3.876.406m3.876-.406c.893-.448 1.685-1.058 2.334-1.795M15.716 13.342a3 3 0 00-5.432 0"/>
                        </svg>
                        <%= repo.forks %>
                      </span>
                      <span class="badge badge-ghost badge-sm">
                        <%= repo.language %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="text-center mt-8">
          <%= link_to "View All Trending →", trending_repos_path, 
              class: "btn btn-primary btn-outline" %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500">No trending repos found. Check back later!</p>
          <%= form_with url: refresh_trending_repos_path, method: :post, local: true, class: "mt-4" do |f| %>
            <%= f.submit "Fetch Trending Repos", class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Recent Entries Preview -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Recent Additions</h2>
      
      <div class="grid gap-4 max-w-4xl mx-auto">
        <% @recent_entries.each do |entry| %>
          <div class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="card-body">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="card-title text-lg">
                    <%= link_to entry.title, entry.url, 
                        target: "_blank",
                        rel: "noopener",
                        class: "link link-hover" %>
                  </h3>
                  <p class="text-sm text-gray-600 mt-2">
                    <%= truncate(entry.content_preview, length: 150) %>
                  </p>
                  <div class="flex items-center gap-4 mt-3 text-sm text-gray-500">
                    <span class="badge badge-ghost badge-sm">
                      <%= entry.entry_type.capitalize %>
                    </span>
                    <span><%= entry.feed.name %></span>
                    <span><%= time_ago_in_words(entry.published_at) %> ago</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center mt-8">
        <%= link_to "Browse All Entries →", entries_path, 
            class: "btn btn-primary btn-outline" %>
      </div>
    </div>
  </section>
  
</div>